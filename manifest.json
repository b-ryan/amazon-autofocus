{
    "manifest_version": 2,
    "name": "Amazon Search Auto-Focus",
    "description": "Automatically focus on search bar when visiting Amazon",
    "version": "3",
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/",
                "*://*.amazon.it/",
                "*://*.amazon.fr/",
                "*://*.amazon.de/",
                "*://*.amazon.ca/",
                "*://*.amazon.co.uk/",
                "*://*.amazon.cn/",
                "*://*.amazon.co.jp/"
            ],
            "js": ["script.js"]
        }
    ]
}
