{
    "manifest_version": 2,
    "name": "Amazon Search Auto-Focus",
    "description": "Automatically focus on search bar when visiting Amazon",
    "version": "3",
    "content_scripts": [
        {
            "matches": [
                "http://*.amazon.com/",
                "http://*.amazon.it/",
                "http://*.amazon.fr/",
                "http://*.amazon.de/",
                "http://*.amazon.ca/",
                "http://*.amazon.co.uk/",
                "http://*.amazon.cn/",
                "http://*.amazon.co.jp/"
            ],
            "js": ["script.js"]
        }
    ]
}
